<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDGshop.App">
	<Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="BoldFont">
                <On Platform="Android" Value="BarlowCondensed-MediumItalic.ttf#Barlow Condensed" />
                <On Platform="iOS" Value="BarlowCondensed-MediumItalic" />
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="NormalFont">
                <On Platform="Android" Value="FrancoisOne-Regular.ttf#Francois One" />
                <On Platform="iOS" Value="FrancoisOne-Regular" />
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="EntryLable">
                <On Platform="Android" Value="Vollkorn-Italic.ttf#Vollkorn" />
                <On Platform="iOS" Value="Vollkorn-Italic" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>